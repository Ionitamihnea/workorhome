<% include ../partials/header %>
<div class="container content">
    <div class="notification">
    <div class="columns toptitle has-text-centered">
        <div class="column">
            <h1>Register an account on Work or Home!</h1>
        </div>
    </div>
    
    <div class="columns">
        <div class="column">
            <form action="/register" method="POST">                   
                        <div class="field">
                        <label class="label">Username</label>
                        <div class="control has-icons-left has-icons-right">
                            <input class="input smmargin" name="username" placeholder="Username" type="text" required  autofocus/>
                            <span class="icon is-small is-left">
                            <i class="fas fa-user"></i>
                            </span>
                        </div>
                        </div>
                        <div class="field">
                        <label class="label">Password</label>
                        <div class="control has-icons-left has-icons-right">
                            <input class="input smmargin" name="password" placeholder="Password" type="password" required />
                            <span class="icon is-small is-left">
                            <i class="fas fa-lock"></i>
                            </span>
                        </div>
                        </div>
                <div class="control smmargin">
                    <button class="button is-primary is-large is-fullwidth">Register</button>
                </div>
                <h6 class="has-text-centered">Already have an account? <a href="/login">Login!</a></h6>
            </form>
        </div>
    </div>
    </div>
</div>

<% include ../partials/footer %>